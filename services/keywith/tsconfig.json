{
  "extends": "../../tsconfig.service.json",
  "compilerOptions": {
    "moduleResolution": "Bundler",
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/src/*": ["./src/*"]
    },
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
